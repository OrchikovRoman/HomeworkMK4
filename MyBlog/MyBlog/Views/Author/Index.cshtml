@model IEnumerable<MyBlog.Models.AuthorViewModel>
@{
    ViewBag.Title = "Authors";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style>
        
    </style>
</head>
<body>
    <div>
        <h3>Authors</h3><img src="~/Resources/Author.png" width="150" height="150">
        <p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th></th>
                </tr>
                @foreach (var i in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => i.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => i.Name)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = i.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = i.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = i.Id })
                        </td>
                    </tr>
                }
            </table>
        </p>
    </div>
</body>
</html>
